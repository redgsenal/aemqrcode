<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="QR Code"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="QR Code">
                <items jcr:primaryType="cq:WidgetCollection">
                	<url
			    		jcr:primaryType="cq:Widget"
						xtype="textfield"
						allowBlank="{Boolean}false"
			            fieldLabel="URL to code"
			            name="./url" />
					 <width
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Width / Length:"
                        allowBlank="{Boolean}false"
                        min="0"
						decimalPrecision="2"
						allowNegative="false"
                        defaultValue="300"
                        name="./width"
                        xtype="numberfield"/>
					 <widthHint
                        jcr:primaryType="cq:Widget"
                        defaultValue="Double"
                        value="Double"
                        name="./width@TypeHint"
                        xtype="hidden"/>                  
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
